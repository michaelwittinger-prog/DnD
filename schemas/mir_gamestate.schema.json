{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/mir_gamestate.schema.json",
  "title": "MIR GameState",
  "description": "Canonical game state for Make It Real. Structure and validation only â€” no business logic.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "campaignId",
    "sessionId",
    "timestamp",
    "rng",
    "map",
    "entities",
    "combat",
    "log",
    "ui"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this schema. Example: 0.1.0"
    },
    "campaignId": { "type": "string", "minLength": 1 },
    "sessionId": { "type": "string", "minLength": 1 },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when this state was last persisted."
    },
    "rng": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "seed", "lastRolls"],
      "properties": {
        "mode": { "$ref": "mir_types.schema.json#/$defs/rngMode" },
        "seed": {
          "type": ["string", "null"],
          "description": "Seed string for seeded mode. Null when mode is manual."
        },
        "lastRolls": {
          "type": "array",
          "minItems": 0,
          "items": { "$ref": "mir_types.schema.json#/$defs/roll" },
          "description": "Last N dice rolls for audit trail. Newest first."
        }
      }
    },
    "map": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "grid", "terrain", "fogOfWarEnabled"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "grid": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "size", "cellSize"],
          "properties": {
            "type": { "enum": ["square"] },
            "size": {
              "type": "object",
              "additionalProperties": false,
              "required": ["width", "height"],
              "properties": {
                "width": { "type": "integer", "minimum": 1, "maximum": 200 },
                "height": { "type": "integer", "minimum": 1, "maximum": 200 }
              }
            },
            "cellSize": {
              "type": "integer",
              "minimum": 1,
              "description": "Physical cell size in game units (e.g. 5 for 5ft squares)."
            }
          }
        },
        "terrain": {
          "type": "array",
          "items": { "$ref": "mir_types.schema.json#/$defs/terrainTile" },
          "description": "Sparse list of terrain tiles. Cells not listed are implicitly open and non-blocking."
        },
        "fogOfWarEnabled": { "type": "boolean", "default": false }
      }
    },
    "entities": {
      "type": "object",
      "additionalProperties": false,
      "required": ["players", "npcs", "objects"],
      "properties": {
        "players": {
          "type": "array",
          "items": { "$ref": "mir_types.schema.json#/$defs/entity" }
        },
        "npcs": {
          "type": "array",
          "items": { "$ref": "mir_types.schema.json#/$defs/entity" }
        },
        "objects": {
          "type": "array",
          "items": { "$ref": "mir_types.schema.json#/$defs/entity" }
        }
      }
    },
    "combat": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "round", "activeEntityId", "initiativeOrder"],
      "properties": {
        "mode": { "$ref": "mir_types.schema.json#/$defs/combatMode" },
        "round": {
          "type": "integer",
          "minimum": 0,
          "description": "Current combat round. 0 in exploration mode."
        },
        "activeEntityId": {
          "type": ["string", "null"],
          "description": "Entity whose turn it is. Null in exploration mode."
        },
        "initiativeOrder": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "description": "Ordered list of entity ids for turn sequence. Empty in exploration mode."
        }
      }
    },
    "log": {
      "type": "object",
      "additionalProperties": false,
      "required": ["events"],
      "properties": {
        "events": {
          "type": "array",
          "items": { "$ref": "mir_types.schema.json#/$defs/logEvent" }
        }
      }
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "required": ["selectedEntityId", "hoveredCell"],
      "properties": {
        "selectedEntityId": { "type": ["string", "null"] },
        "hoveredCell": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["x", "y"],
              "properties": {
                "x": { "type": "integer", "minimum": 0 },
                "y": { "type": "integer", "minimum": 0 }
              }
            },
            { "type": "null" }
          ]
        }
      }
    }
  }
}
