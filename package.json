{
  "name": "ai-gm-rpg",
  "version": "0.22.0",
  "description": "Hybrid analog tabletop RPG with AI Game Master",
  "main": "index.js",
  "scripts": {
    "dev:server": "node scripts/run-server.mjs",
    "dev:client": "node scripts/run-client.mjs",
    "validate": "node validate_game_state.js",
    "smoke": "node smoke_mutation_test.js",
    "invariants": "node check_invariants.js",
    "fixtures": "node run_fixtures.js",
    "ai:validate": "node validate_ai_output.js",
    "ai:response:validate": "node validate_ai_gm_response.js",
    "preflight": "node scripts/preflight.mjs",
    "test:env": "node --test tests/env_check_test.mjs",
    "gate": "node gatekeeper.js",
    "mir:validate": "node src/state/validateGameState.mjs",
    "mir:compile-schemas": "node scripts/compile-schemas.mjs",
    "test:engine": "node tests/engine_test.mjs",
    "test:ai": "node tests/ai_parser_test.mjs && node tests/ai_prompt_test.mjs",
    "test:bridge": "node tests/ai_bridge_test.mjs",
    "test:replay": "node tests/replay_test.mjs",
    "test:mvp": "node tests/mvp_test.mjs",
    "test:scenario": "node tests/scenario_test.mjs",
    "test:foundation": "node tests/foundation_test.mjs",
    "test:pathfinding": "node tests/pathfinding_test.mjs",
    "test:death": "node tests/death_combat_test.mjs",
    "test:npc": "node tests/npc_strategy_test.mjs",
    "test:narration": "node tests/narration_combat_controller_test.mjs",
    "test:sprint1": "node tests/sprint1_test.mjs",
    "test:persistence": "node tests/persistence_test.mjs",
    "test:visibility": "node tests/visibility_test.mjs",
    "test:difficulty": "node tests/difficulty_test.mjs",
    "test:broadcast": "node tests/event_broadcast_test.mjs",
    "test:monsters": "node tests/monster_manual_test.mjs",
    "test:adapter": "node tests/model_adapter_test.mjs",
    "test:memory": "node tests/memory_context_test.mjs",
    "test:intent": "node --test tests/intent_system_test.mjs",
    "test:llm-parser": "node --test tests/llm_intent_parser_test.mjs",
    "test:multi-action": "node --test tests/multi_action_turn_test.mjs",
    "test:encounter": "node --test tests/encounter_generator_test.mjs",
    "test:character": "node --test tests/character_creator_test.mjs",
    "test:scenario-builder": "node --test tests/scenario_builder_test.mjs",
    "test:all": "node --test tests/env_check_test.mjs tests/engine_test.mjs tests/ai_parser_test.mjs tests/ai_prompt_test.mjs tests/ai_bridge_test.mjs tests/replay_test.mjs tests/mvp_test.mjs tests/scenario_test.mjs tests/foundation_test.mjs tests/pathfinding_test.mjs tests/death_combat_test.mjs tests/npc_strategy_test.mjs tests/narration_combat_controller_test.mjs tests/sprint1_test.mjs tests/persistence_test.mjs tests/visibility_test.mjs tests/difficulty_test.mjs tests/event_broadcast_test.mjs tests/monster_manual_test.mjs tests/model_adapter_test.mjs tests/memory_context_test.mjs tests/multi_action_turn_test.mjs tests/encounter_generator_test.mjs tests/character_creator_test.mjs tests/scenario_builder_test.mjs tests/intent_system_test.mjs tests/llm_intent_parser_test.mjs",
    "typecheck": "tsc --noEmit",
    "ai:bridge": "node src/server/aiBridge.mjs",
    "replay:verify": "node scripts/run-replay.mjs",
    "start:mvp": "node scripts/start-mvp.mjs",
    "test": "npm run validate && npm run smoke && npm run invariants && npm run fixtures",
    "check": "node scripts/smoke-check.mjs",
    "turn": "node src/pipeline/runTurn.mjs && node scripts/sync-state.mjs",
    "turn:bundle": "node src/pipeline/runTurn.mjs",
    "replay": "node src/pipeline/replayTurn.mjs",
    "replay:latest": "node src/pipeline/replayTurn.mjs --latest",
    "api": "node src/server/localApiServer.mjs",
    "dev": "node scripts/run-dev.mjs",
    "dev:api": "node src/server/localApiServer.mjs",
    "dev:viewer": "node scripts/run-viewer.mjs",
    "view": "node scripts/run-viewer.mjs",
    "view:sync": "node scripts/sync-state.mjs",
    "viewer:install": "npm --prefix viewer install",
    "ui": "node src/ui/serve.mjs",
    "ui:stop": "node -e \"const{execSync}=require('child_process');try{const o=execSync('netstat -aon|findstr :3001|findstr LISTENING',{encoding:'utf-8'});const pids=new Set(o.trim().split('\\n').map(l=>l.trim().split(/\\s+/).pop()).filter(p=>/^\\d+$/.test(p)&&p!=='0'));for(const p of pids){try{execSync('cmd.exe /c \\\"taskkill /F /PID '+p+'\\\"');console.log('Killed PID '+p)}catch{}}}catch{console.log('No process on port 3001')}\"",
    "prepare": "husky",
    "version:patch": "npm version patch -m \"release: v%s\"",
    "version:minor": "npm version minor -m \"release: v%s\"",
    "version:tag": "git push origin main --tags"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "openai": "^6.21.0"
  }
}
